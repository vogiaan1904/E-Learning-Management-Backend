{
  "name": "e-learning-management-backend",
  "version": "1.0.0",
  "description": "E Learning Management Backend",
  "main": "index.js",
  "scripts": {
    "migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "test": "dotenv -e .env.test -- jest",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d redis_test && yarn migrate:test && yarn test && docker-compose -f docker-compose.test.yml down",
    "clean": "echo \"Cleaning build and dependencies\" && rm -rf ./dist && rm -rf ./node_modules && echo \"Done\"",
    "prebuild": "echo \"Cleaning build\" && rm -rf ./dist && echo \"Done\"",
    "build": "yarn --frozen-lockfile install && tsc && tsc-alias && copyfiles -u 1 \"src/templates/**/*\" \"dist\"",
    "start:prod": "cross-env NODE_ENV=production node ./dist/index.js",
    "start:dev": "nodemon",
    "start:bug": "DEBUG=express:* && nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "reset": "echo \"Cleaning dependencies and reinstall\" && rm -rf ./node_modules && yarn install && echo \"Done\"",
    "docker:prod": "docker-compose -f docker-compose.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.yml up -d",
    "docker:remove": "docker compose rm postgres --stop --force --volumes",
    "docker:create": "docker compose up postgres --detach",
    "docker:down": "docker compose down --volumes --remove-orphans",
    "docker:restart": "yarn docker:remove && docker:create",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:validate": "npx prisma validate",
    "prisma:init": "npx prisma init",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^8.0.1",
    "express-session": "^1.18.0",
    "global": "^4.4.0",
    "hbs": "^4.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "memorystore": "^1.6.7",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "nodemailer-express-handlebars": "^6.1.2",
    "nodemon": "^3.1.4",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "prisma": "^5.18.0",
    "redis": "^4.7.0",
