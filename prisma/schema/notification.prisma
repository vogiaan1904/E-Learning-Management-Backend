model Notification {
    id        String   @id @default(uuid())
    userId    String
    content   Json
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())

    @@map("Notifications")
}

model FCMToken {
    id     String @id @default(uuid())
    token  String @unique
    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("FCMTokens")
}
